<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Delivery_Food" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_gray</item>
        <item name="colorPrimaryVariant">@color/gray</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="smallText">
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">center</item>

    </style>

    <style name="largeText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_30sp</item>
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_marginEnd">@dimen/_16dp</item>
        <item name="android:layout_marginVertical">70dp</item>
    </style>

    <style name="largeStartText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/_40sp</item>
        <item name="android:layout_marginStart">@dimen/_32dp</item>
        <item name="android:layout_marginEnd">@dimen/_32dp</item>
        <item name="android:layout_marginTop">41dp</item>
        <item name="android:gravity">center</item>
        <item name="fontFamily">@font/comfortaa_regular</item>
        <item name="android:textColor">#454545</item>
    </style>

    <style name="logoStyle">
        <item name="android:layout_width">@dimen/_250dp</item>
        <item name="android:layout_height">@dimen/_250dp</item>
        <item name="android:layout_margin">@dimen/_58dp</item>
    </style>

    <style name="backButton">
        <item name="android:layout_marginStart">@dimen/_16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
        <item name="android:src">@drawable/back_button</item>
    </style>

    <style name="buttonInformationAccount">
        <item name="android:textColor">@color/black</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textSize">@dimen/_20sp</item>
        <item name="android:paddingLeft">@dimen/_32dp</item>
    </style>


    <style name="button">
        <item name="android:padding">@dimen/_12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_margin">@dimen/_20sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="button_auth_service">
        <item name="android:padding">@dimen/_12dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@drawable/button_style</item>
        <item name="android:layout_margin">@dimen/_20sp</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- Custom theme card view. -->
    <style name="card_view_style" parent="Theme.AppCompat.Light">
        <item name="cardCornerRadius">20dp</item>
        <item name="cardElevation">6dp</item>
        <item name="cardMaxElevation">8dp</item>
        <item name="contentPaddingBottom">26dp</item>
        <item name="contentPaddingTop">24dp</item>
        <item name="contentPaddingLeft">16dp</item>
        <item name="contentPaddingRight">16dp</item>
        <item name="android:layout_margin">20dp</item>
    </style>

</resources>